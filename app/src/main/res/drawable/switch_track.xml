<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:opticalInsetTop="8dp" android:opticalInsetBottom="8dp" android:opticalInsetLeft="8dp" android:innerRadius="8dp">
            <corners android:radius="24dp"/>
            <solid android:color="@color/blue"/>
            <size android:width="24dp" android:height="24dp"/>
            <padding android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape>
            <corners android:radius="24dp"/>
            <solid android:color="@color/light_text"/>
            <size android:width="48dp" android:height="24dp"/>
        </shape>
    </item>
</selector>